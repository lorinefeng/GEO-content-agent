// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Article {
  id            String   @id @default(uuid())
  product_name  String
  product_price Float
  strategy      String
  strategy_name String
  content       String
  created_at    DateTime @default(now())
}

model Template {
  strategy      String   @id
  name          String
  prompt        String
}

